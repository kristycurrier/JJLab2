
@{
    ViewBag.Title = "Add Product";
}

@using LabJJ2.Models
@model ProductsModel

<h2>Add Product</h2>

@ViewBag.Message

@using (Html.BeginForm("Edit", "Products", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter product name" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
</div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Enter middle name" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Price)
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "Enter price" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn-success">Submit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

